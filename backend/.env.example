# Example environment variables for EventX backend

# MongoDB
MONGODB_URI=mongodb://localhost:27017
DATABASE_NAME=eventx

# JWT (Authentication)
JWT_SECRET=your-jwt-secret-here

# Stellar
STELLAR_NETWORK=testnet
STELLAR_SEED=your-stellar-seed-here
STELLAR_PUBLIC_KEY=your-stellar-public-key-here
STELLAR_HORIZON_URL=https://horizon-testnet.stellar.org

# Base Chain
BASE_PRIVATE_KEY=your-base-private-key-here
BASE_PUBLIC_ADDRESS=your-base-public-address-here
BASE_RPC_URL=https://base-goerli.g.alchemy.com/v2/your-api-key
USDC_CONTRACT_ADDRESS=your-usdc-contract-address-here

# Rate limiting
RATE_LIMIT_PER_SECOND=10
